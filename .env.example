# =========================
# App (Next.js)
# =========================
# URL pública do app (onde o Next.js roda)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Nome da loja exibido na UI
SITE_NAME=NeoMercado

# =========================
# Strapi API (Headless CMS)
# =========================
# URL base do Strapi (use 127.0.0.1 ou localhost conforme seu ambiente)
NEXT_PUBLIC_STRAPI_URL=http://127.0.0.1:1337
# Token de API do Strapi (opcional, recomendado em produção para criação de pedidos)
# Gere em Settings > API Tokens (Full Access ou escopo mínimo em Orders)
STRAPI_TOKEN=

# =========================
# Frete — Melhor Envio (opcional)
# =========================
# Token de API do Melhor Envio
ME_API_TOKEN=
# URL da API (default: https://melhorenvio.com.br)
# ME_API_URL=
# CEP de origem (opcional; se vazio, usa STORE_ZIP ou fallback 01001-000)
ME_FROM_ZIP=
# CEP padrão da sua loja (opcional)
STORE_ZIP=

# =========================
# Pagamentos (Asaas) – apenas no servidor
# NUNCA compartilhe esta chave. Não versionar .env reais.
# =========================
# ASAAS_API_KEY=CHANGE_ME
# ASAAS_ENVIRONMENT=sandbox  # ou "production"

ASAAS_API_KEY=
ASAAS_ENVIRONMENT=
# Secret para validar assinatura do webhook Asaas
ASAAS_WEBHOOK_SECRET=

# =========================
# SMTP – envio de e-mails do checkout
# =========================
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=587
# SMTP_USER=CHANGE_ME
# SMTP_PASS=CHANGE_ME
# SMTP_FROM="NeoMercado <no-reply@neomercado.com>"

# =========================
# Sentry (opcional)
# =========================
# Defina apenas um DSN (server ou público)
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_TRACES_SAMPLE_RATE=0.1
