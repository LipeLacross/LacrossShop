# Strapi Backend — .env.example
# Copie para .env (DEV) ou defina como variáveis no ambiente (PROD)

# Servidor
HOST=0.0.0.0
PORT=1337
APP_KEYS=change_me_key1,change_me_key2,change_me_key3,change_me_key4

# Segredos obrigatórios
ADMIN_JWT_SECRET=change_me_admin_jwt_secret
API_TOKEN_SALT=change_me_api_token_salt
TRANSFER_TOKEN_SALT=change_me_transfer_token_salt

# Banco de dados (padrão: SQLite)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Exemplo PostgreSQL (descomente e ajuste se for usar)
# DATABASE_CLIENT=postgres
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false

# Flags de bootstrap/seed
# Em DEV, rode uma vez com SEED=true para popular conteúdos básicos
SEED=false
# Em produção, mantenha criação pública de pedidos desativada
ALLOW_PUBLIC_ORDER_CREATE=false

