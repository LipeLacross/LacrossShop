# ========= BACKEND (Strapi) =========
HOST=0.0.0.0
PORT=1337

# Chaves de app (exemplos - gere as suas em produção)
APP_KEYS=your_app_key1,your_app_key2
ADMIN_JWT_SECRET=your_admin_jwt_secret
API_TOKEN_SALT=your_api_token_salt
TRANSFER_TOKEN_SALT=your_transfer_token_salt
JWT_SECRET=your_jwt_secret

# ========= CORS =========
# Origens permitidas a acessar o Strapi (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000

# ========= BANCO DE DADOS =========
# SQLite (default para desenvolvimento)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db
# DATABASE_SSL=false

# Postgres (produção - descomente e configure)
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false

# ========= SEED =========
# Define SEED=true para popular categorias/produtos/páginas demo ao subir o Strapi
# SEED=true
