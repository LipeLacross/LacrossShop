{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": "Clientes da loja"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "cpf": {
      "type": "string",
      "unique": true
    },
    "birthDate": {
      "type": "date"
    },
    "gender": {
      "type": "enumeration",
      "enum": ["male", "female", "other", "prefer_not_to_say"]
    },
    "addresses": {
      "type": "component",
      "component": "shared.address",
      "repeatable": true
    },
    "defaultAddress": {
      "type": "integer",
      "default": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "marketingConsent": {
      "type": "boolean",
      "default": false
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "customers"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    }
  }
}
