{
  "kind": "collectionType",
  "collectionName": "coupons",
  "info": { "singularName": "coupon", "pluralName": "coupons", "displayName": "Coupon" },
  "pluginOptions": { "content-api": { "visible": true } },
  "options": { "draftAndPublish": true },
  "attributes": {
    "code": { "type": "string", "required": true, "unique": true },
    "discountType": { "type": "enumeration", "enum": ["percent", "fixed"], "default": "percent" },
    "value": { "type": "decimal", "default": 0 },
    "freeShipping": { "type": "boolean", "default": false },
    "minAmount": { "type": "decimal", "default": 0 },
    "usageLimit": { "type": "integer", "default": 0 },
    "usedCount": { "type": "integer", "default": 0 },
    "startsAt": { "type": "datetime" },
    "endsAt": { "type": "datetime" },
    "active": { "type": "boolean", "default": true },
    "store": { "type": "relation", "relation": "manyToOne", "target": "api::store.store" }
  }
}

