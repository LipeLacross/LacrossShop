{
  "kind": "collectionType",
  "collectionName": "stores",
  "info": { "singularName": "store", "pluralName": "stores", "displayName": "Store" },
  "options": { "draftAndPublish": true },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true, "unique": true },
    "domain": { "type": "string" },
    "description": { "type": "text" },
    "active": { "type": "boolean", "default": true },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "store"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "store"
    },
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page",
      "mappedBy": "store"
    }
  }
}