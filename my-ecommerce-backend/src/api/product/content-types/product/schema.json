{
  "kind": "collectionType",
  "collectionName": "products",
  "info": { "singularName": "product", "pluralName": "products", "displayName": "Product" },
  "pluginOptions": { "content-api": { "visible": true } },
  "options": { "draftAndPublish": true },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true, "unique": true },
    "shortDescription": { "type": "string" },
    "description": { "type": "text" },
    "price": { "type": "decimal", "default": 0 },
    "stock": { "type": "integer", "default": 0 },
    "active": { "type": "boolean", "default": true },
    "featured": { "type": "boolean", "default": false },
    "images": { "type": "media", "multiple": true },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::variant.variant",
      "mappedBy": "product"
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "products"
    }
  }
}