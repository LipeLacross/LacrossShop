{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Produtos da loja"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "compareAtPrice": {
      "type": "decimal"
    },
    "cost": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "barcode": {
      "type": "string"
    },
    "weight": {
      "type": "decimal"
    },
    "dimensions": {
      "type": "component",
      "component": "shared.dimensions",
      "repeatable": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "variants": {
      "type": "component",
      "component": "product.product-variant",
      "repeatable": true
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "products"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "orderItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "product"
    }
  }
}
